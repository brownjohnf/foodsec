:erb
  <!DOCTYPE html>
%html
  %head
    %title Peace Corps Senegal | Food Security
    = stylesheet_link_tag "application", :media => "all"
    = javascript_include_tag "application"
    = csrf_meta_tags
  %body
    .container
      .navbar.navbar-fixed-top
        .navbar-inner
          .container
            .row
              .span12
                %a.brand{:href => "#{root_path}"} PC|SN Food Security
                %ul.nav
                  %li.dropdown
                    %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                      Go to
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to 'Data Sources', sources_path
                  %li.dropdown
                    %a.dropdown-toggle{'href' => '#', 'data-toggle' => 'dropdown'}
                      Add
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to 'Data Source', new_source_path
                %ul.nav.pull-right
                  %li= link_to 'Sign in', new_user_session_path unless user_signed_in?
                  %li= link_to 'Sign up', new_user_registration_path unless user_signed_in?
                  %li= link_to "Sign out #{current_user.email}", destroy_user_session_path, :method => :delete if user_signed_in?
    .container
      .row
        .span4.offset4
          - if notice
            .alert.alert-success.center
              = notice
          - if alert
            .alert.alert-error.center
              = alert
    = yield
    .container
      .row
        .span12
          %hr
          %p Footer text here.
        - if Rails.env.development?
          .span12
            = debug(params)
