= form_for @indicator do |f|
  -if @indicator.errors.any?
    #error_explanation
      %h2= "#{pluralize(@indicator.errors.count, "error")} prohibited this indicator from being saved:"
      %ul
        - @indicator.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :survey_id
    = f.number_field :survey_id
  .actions
    = f.submit 'Save'
